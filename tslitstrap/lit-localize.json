{
    "$schema": "https://raw.githubusercontent.com/lit/lit/main/packages/localize-tools/config.schema.json",
    "sourceLocale": "en",
    "targetLocales": ["hu-HU", "fr_FR"],
    "tsConfig": "./tsconfig.json",
    "output": {
        "mode": "runtime",
        "outputDir": "src/loc",
        "localeCodesModule": "src/loc/locale-codes.ts"
    },
    "interchange": {
      "format": "xliff",
      "xliffDir": "xliff"
    }
}